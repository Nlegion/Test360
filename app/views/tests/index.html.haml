%div.container-fluid
  %div.row
    %div.col-md-2
    %div.col-md-8
      %h1 Список тестов
      %br
      - if @tests.any?
        %table{:class => 'table table-striped table-bordered'}
          %tr
            %th Название
            %th Описание
            %th Действия
          - @tests.each do |t| 
            %tr
              %td
                = t.name
              %td 
                = t.description
              %td 
                = link_to 'Подробнее', test_path(t), class: "btn btn-success btn-xs"
                = "   "
                = link_to 'Редактировать', edit_test_path(t), class: "btn btn-warning btn-xs"
                = "   "
                = link_to 'Удалить', test_path(t), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'точняк?' } 
      %br
      = link_to 'Создать новый тест', new_test_path, class: "btn btn-default btn" 
    %div.col-md-2             