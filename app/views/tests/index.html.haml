%h1 Список тестов
%br
- if @tests.any?
  %table{:class => 'table table-striped table-bordered'}
    %tr
      %th{:class => 'text-center'} Название
      %th{:class => 'text-center'} Описание
      %th{:class => 'text-center'} Тестирование            
      %th{:class => 'text-center'} Действия
    - @tests.each do |t| 
      %tr
        %td{:class => 'text-center'}
          = t.name
        %td 
          = t.description
        %td{:class => 'text-center'}
          = link_to 'Пройти тест', new_answer_test_answers_path(t), class: "btn btn-success btn-xs btn-block"
          %p
          = link_to 'Результаты', test_results_path(t), class: "btn btn-default btn-xs btn-block"
        %td{:class => 'text-center'} 
          = link_to 'Подробнее', test_path(t), class: "btn btn-info btn-xs btn-block"
          - if @user.present?
            %p
            = link_to 'Редактировать', edit_test_path(t), class: "btn btn-warning btn-xs btn-block"
            %p
            = link_to 'Удалить', test_path(t), class: "btn btn-danger btn-xs btn-block", method: :delete, data: { confirm: 'Уверен?' }
%p{:class => 'text-center'}
  = link_to 'Создать новый тест', new_test_path, class: "btn btn-default btn" 


            