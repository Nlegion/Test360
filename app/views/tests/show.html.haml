%div.container-fluid
  %div.row
    %div.col-md-2
    %div.col-md-8
      %h4 Описание #{@test.name}
      %table.table
        %tr
          %td
            %b
              = @test.name 
        %tr
          %td
            = "Название: #{@test.name}"
        %tr
          %td
            = "Описание: #{@test.description}"
      - if @test.questions.present?
        %h4 Вопросы
        %table{:class => 'table table-striped table-bordered'}
          %tr
            %th Номер
            %th Описание
            %th Тип
            %th Действия
          - @test.questions.each do |q| 
            %tr
              %td 
                = q.num
              %td 
                = q.body
              %td 
                = q.about             
              %td 
                = link_to 'Подробнее', test_question_path(@test, q), class: "btn btn-success btn-xs"
                = "   "
                = link_to 'Удалить', test_question_path(@test, q), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'точняк?' }
      = link_to 'Назад', tests_path, class: "btn btn-default"
      = "   "
      = link_to 'Добавить вопрос', new_test_question_path(@test), class: "btn btn-success"
    %div.col-md-2
