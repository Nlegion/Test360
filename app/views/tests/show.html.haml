%h4 Описание #{@test.name}
%table.table
  %tr
    %td
      %b
        = @test.name 
  %tr
    %td
      = "Название: #{@test.name}"
  %tr
    %td
      = "Описание: #{@test.description}"
  %tr
    %td
      = "Количество ответов: #{@test.num_of_answ}"
  %tr
    %td
      = "Тип ответов: #{@test.type_of_answ}" 
  %tr
    %td           
      = "Спецответ: #{@test.sp_answer}" 
- if @user.present?
  = link_to 'Добавить вопрос', new_test_question_path(@test), class: "btn btn-info"
- if @test.questions.present?
  %h4 Вопросы
  %table{:class => 'table table-striped table-bordered'}
    %tr
      %th{:class => 'text-center'} Номер
      %th{:class => 'text-center'} Вопрос
      %th{:class => 'text-center'} Тип 
      - if @user.present?
        %th{:class => 'text-center'} Действия
    - @test.questions.order(num: :desc).each do |q| 
      %tr
        %td{:class => 'text-center'} 
          = q.num
        %td 
          = q.body
        %td{:class => 'text-center'} 
          = q.about             
        - if @user.present?
          %td{:class => 'text-center'} 
            = link_to 'Редактировать', edit_test_question_path(@test, q), class: "btn btn-warning btn-xs"
            = "   "
            = link_to 'Удалить', test_question_path(@test, q), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Уверен?' }
- if @user.present?
  = link_to 'Пройти тест', get_answ_test_answers_path(@test), class: "btn btn-success"
  = "   "
  = link_to 'Результаты', test_results_path(@test) , class: "btn btn-default"
%br
%br
= link_to 'Назад', tests_path, class: "btn btn-default"
